                                                                    .FirstOrDefault(a => a.DateAndTime.Date == date.Date && a.AttendanceId.ToString() == attendanceId && a.StudentId == student.StudentID);
                                                                    var status = attendance != null ? "Present" : "Absent";
                                                                    var statusColor = attendance != null ? "text-success" : "text-danger";

                                                                    <td class="text-center @statusColor" style="vertical-align: middle;">@status</td>

                                                                    <td class="text-center">
                                                                        <button type="button" class="btn btn-inversed change-status-btn" data-student-id="@student.StudentID" data-attendance-id="@attendanceId" data-current-status="@status" data-date-time="@day.Split(' ')[0]">Change status</button>
                                                                    </td>
                                                                }
                                                            }
                                                        </tr>
                                                    }
                                                }
                                                @if (Model.WeekDetails.First().AllClassDays.First().Split(".")[1] == "0"){
                                                    <tr>
                                                        <td colspan="3">No Any Attendance Record.</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>

                                    </div>
                                </div>
                            </div>

                            <div class="modal-footer m-t-15">
                                <div class="in-a-block">
                                    <div id="change-empty-@student.StudentID" class="text-danger prompt-text" style="display: none; margin-right: 20px;"><i class="mdi mdi-alert-circle-outline"></i>You does not make any change.</div>
                                    <button type="button" class="btn btn-default waves-effect m-r-10" data-dismiss="modal" onclick="closeChangeStatusModal('@student.StudentID');">Cancel</button>
                                    <button type="submit" id="change-student-attendance-status-btn" class="btn btn-inverse waves-effect waves-light">Save</button>
                                </div>
                                
                            </div>
                        </div>
                    </form>
                    <!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->

            
        }

