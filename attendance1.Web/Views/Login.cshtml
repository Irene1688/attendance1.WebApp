@model attendance1.Web.Models.LoginMdl
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A attendance management system.">

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assets/images/UTSlogo3.png">
    <Title>Login</Title>

    <!-- App css -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/core.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/components.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/pages.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/menu.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/responsive.css" rel="stylesheet" type="text/css" />
    <link href="~/css/shared/site-common.css" rel="stylesheet" />

    <script src="~/assets/js/modernizr.min.js"></script>

    <!--Web App-->
    <link rel="manifest" href="/Manifest.json">

    <style>
        .login-card-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

        .help-container {
            text-align: center;
            color: #346ed6;
        }

        .help-message {
            margin-bottom: 0.5rem;
        }

            .help-message a {
                text-decoration: underline;
                color: cornflowerblue;
            }

        .button-container {
            display: flex;
            flex-direction: column;
            gap: 2.2rem;
            margin-top: 1rem;
        }

        .primary-button {
            width: 100%;
            padding: 0.75rem;
            border-radius: 0.5rem;
            border: none;
            font-size: 1.5rem;
            font-weight: bold;
            cursor: pointer;
            background: white;
            color: rebeccapurple;
            transition: all 0.2s;
        }

            .primary-button:hover {
                background: #f0f0f0;
                transform: translateY(-1px);
            }

        .secondary-button {
            width: 100%;
            padding: 0.75rem;
            border-radius: 0.5rem;
            border: 2px solid rgba(255, 255, 255, 0.3);
            background: transparent;
            color: white;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.2s;
        }

            .secondary-button:hover {
                border-color: white;
                background: rgba(255, 255, 255, 0.1);
            }
    </style>
</head>


<body class="bg-transparent" style="padding-bottom: 0;">

    <div class="horizontal-center" id="outter-container" style="min-height: 100vh; padding: 15px;">
        <div class="direction-column" id="inner-container" style="height: 100vh; padding: 24px; row-gap: 3vh;">
            <div class="login-card-container">
                <!--Error Message-->
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger" style="" role="alert">
                        @TempData["ErrorMessage"]
                    </div>
                }
                <div id="device-type-error" class="prompt-text text-danger m-b-10" style="display: none; font-size: 1.5rem;"><i class=" mdi mdi-alert-circle-outline"></i>You need to use your phone to proceed instead of other device type.</div>

                <div class="main">
                    <input type="checkbox" id="chk" aria-hidden="true">
                    <div class="login">

                        <form class="student-login-form" style="min-height: max-content;" asp-controller="Account" asp-action="Login" id="student-login-form" method="post">
                            @* <div id="device-type-error" class="prompt-text m-b-0" style="display: none; color: white;"><i class=" mdi mdi-alert-circle-outline"></i>You need to use your phone to proceed instead of other device type.</div> *@
                            
                            <div style="flex-direction: column; align-items: center;">
                                <label for="chk" class="login-label" aria-hidden="true">
                                    Student
                                </label>
                                <div class="device-require-caption">* Your device will bind to your student ID. Please use your phone to register and login.</div>
                            </div>

                            <input type="hidden" asp-for="Role" value="Student">
                            
                            <div>
                                <input class="input" type="text" id="student-username" asp-for="Username" placeholder="Enter your name as OCULUS" required="">
                                <div id="student-username-empty" class="prompt-text m-b-0" style="display: none; color: white;"><i class=" mdi mdi-alert-circle-outline"></i> Username is required.</div>
                                <div id="student-username-error" class="prompt-text m-b-0" style="display: none; color: white;"><i class=" mdi mdi-alert-circle-outline"></i> Username must be in character form.</div>
                            </div>
                            
                            <div>
                                <input class="input" type="text" id="student-id" asp-for="StudentID" placeholder="Enter your Student ID" required="">
                                <div id="student-id-empty" class="prompt-text m-b-0" style="display: none; color: white;"><i class=" mdi mdi-alert-circle-outline"></i> Student ID is required.</div>
                                <div id="student-id-error" class="prompt-text m-b-0" style="display: none; color: white;"><i class=" mdi mdi-alert-circle-outline"></i> Format of Student ID incorrect.</div>
                            </div>
                            <div class="button-container">
        <button id="student-login-button" type="submit" class="primary-button">
            Log in
        </button>
        <button id="student-register-button" type="submit" class="secondary-button">
            First time using? Register Now
        </button>
    </div>
                            @* <div class="in-a-row" style="gap: 20px; height: 100px;">
                                <button id="student-register-button" type="submit" style="background-color: white; color: rebeccapurple;">Register</button>
                                <button id="student-login-button" type="submit">Log in</button>
                            </div> *@

                        </form>
                    </div>

                    <div class="register">
                        <form class="form lecturer-login-form" asp-controller="Account" asp-action="Login" id="staff-login-form" method="post" style="padding-bottom: 60px;">
                            <label class="login-label" for="chk" aria-hidden="true">Staff</label>

                            <div>
                                <input class="input" type="text" id="staff-username" asp-for="Username" placeholder="Username" required="">
                                <div id="staff-username-empty" class="prompt-text text-danger" style="display: none;"><i class=" mdi mdi-alert-circle-outline"></i> Username is required.</div>
                                <div id="staff-username-error" class="prompt-text text-danger" style="display: none;"><i class=" mdi mdi-alert-circle-outline"></i> Username must be in character form.</div>
                            </div>
                            @* <input class="input" type="email" name="email" placeholder="Email" required=""> *@

                            <div>
                                <input class="input" type="password" id="staff-password" asp-for="Password" placeholder="Password" required="">
                                <div id="staff-password-empty" class="prompt-text text-danger" style="display: none;"><i class=" mdi mdi-alert-circle-outline"></i> Password is required.</div>
                                <div id="staff-password-error" class="prompt-text text-danger" style="display: none;"><i class=" mdi mdi-alert-circle-outline"></i> Minimum 6 charactes are required.</div>
                            </div>
                            <div>
                                <div class="in-a-row" style="justify-content: flex-start; gap: 2rem;">
                                    <div>
                                        <div class="custom-radio">
                                            <input type="radio" name="Role" value="Admin" id="role-admin" required>
                                            <label for="role-admin">
                                                Admin
                                            </label>
                                        </div>
                                    </div>
                                    <div>
                                        <div class="custom-radio">
                                            <input type="radio" name="Role" value="Lecturer" id="role-lecturer" required>
                                            <label for="role-lecturer">
                                                Lecturer
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div id="staff-role-empty" class="prompt-text text-danger m-t-0" style="display: none;"><i class=" mdi mdi-alert-circle-outline"></i> Please select your role.</div>
                            </div>
                            
                            <div class="checkbox checkbox-purple" style="margin: 0; padding: 0px 24px;">
                                <input id="checkbox-signup-staff" asp-for="RememberMe" type="checkbox" checked>
                                <label for="checkbox-signup-staff" style="font-size: 1.5rem; margin: 0;">
                                    Remember me
                                </label>
                            </div>

                            <button class="lecture-login-button" type="submit" id="staff-login-button" style="min-height: 40px;">Log in</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="help-container">
                <div class="help-message">Need help? Click below for getting support</div>
                <div class="help-message">
                    <a href="mailto:bcs22090010@student.uts.edu.my" target="_blank" rel="noopener noreferrer">Email Me</a>
                    |
                    <a href="https://forms.gle/2X5GEs8sK9GLbv2f9" target="_blank" rel="noopener noreferrer">Report Problem</a>
                </div> 
            </div>
        </div>
        
    </div>

    <script>
        var resizefunc = [];
    </script>

    <!--page js-->
    <script src="~/js/Shared/Login.js"></script>

    <!-- jQuery  -->
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/detect.js"></script>
    <script src="~/assets/js/fastclick.js"></script>
    <script src="~/assets/js/jquery.blockUI.js"></script>
    <script src="~/assets/js/waves.js"></script>
    <script src="~/assets/js/jquery.slimscroll.js"></script>
    <script src="~/assets/js/jquery.scrollTo.min.js"></script>

    <!-- App js -->
    <script src="~/assets/js/jquery.core.js"></script>
    <script src="~/assets/js/jquery.app.js"></script>

</body>
</html>

