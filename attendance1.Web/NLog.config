<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>
	
	<targets>
		<!-- file log -->
		<!-- file name: ${basedir}/logs/logfile.txt-->
		<!--<target name="logfile" xsi:type="File" fileName="C:/Users/Irene/source/repos/attendance1.WebApp/attendance1.Web/Logs/${shortdate}.txt" layout="${longdate} ${level:uppercase=true} ${message}" />-->
		<target xsi:type="File" name="allfile" fileName="C:/Users/Irene/source/repos/attendance1.WebApp/attendance1.Web/Logs/all-${shortdate}.txt"
				layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />

		<target xsi:type="File" name="errorfile" fileName="C:/Users/Irene/source/repos/attendance1.WebApp/attendance1.Web/Logs/error-${shortdate}.log"
				layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />
		<!-- Console log -->
		<target xsi:type="Console" name="logConsole" layout="${MicrosoftConsoleLayout}" />
		<!--<target name="logconsole" xsi:type="Console" layout="${longdate} ${level:uppercase=true} ${message}" />-->
	</targets>

    <rules>
		<logger name="*" minlevel="Info" writeTo="allfile" />
		<logger name="*" minlevel="Warn" writeTo="errorfile" />
		<logger name="Microsoft." minlevel="Warn" writeTo="logconsole" />
    </rules>

</nlog>
