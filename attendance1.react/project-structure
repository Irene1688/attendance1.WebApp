src/
├── api/                    # API 请求相关
│   ├── axios.js           # axios 实例和拦截器配置
│   ├── admin.js           # 管理员相关API
│   ├── auth.js            # 认证相关API  
│   ├── lecturer.js        # 讲师相关API
│   └── student.js         # 学生相关API
├── assets/                 # 静态资源
│   ├── images/            # 图片资源
│   └── styles/            # 全局样式
├── components/            # 共享组件
│   ├── common/           # 通用组件
│   │   ├── Button/
│   │   ├── Input/ 
│   │   └── Table/
│   └── layout/           # 布局组件
│       ├── Header/
│       ├── Sidebar/
│       └── Footer/
├── hooks/                # 自定义Hooks
│   ├── useAuth.js       # 认证相关hook
│   └── useApi.js        # API请求hook
├── pages/               # 页面组件
│   ├── admin/          # 管理员页面
│   ├── auth/           # 登录注册页面
│   ├── lecturer/       # 讲师页面
│   └── student/        # 学生页面
├── store/              # 状态管理
│   ├── slices/        # Redux切片
│   └── store.js       # Redux store配置
├── utils/             # 工具函数
│   ├── auth.js       # 认证相关
│   └── format.js     # 格式化工具
└── routes/           # 路由配置
    └── index.jsx     # 路由定义 